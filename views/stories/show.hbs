<div>
    <div class="row">
        <h3>{{story.title}}
            <small class="fa-small">{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="col s12 m7 card story">
            <div class="card-image center-align mt-2">
                <img src="../../img/{{stripDownPublicFolderPath story.image}}" alt="Story Image">
            </div>
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
        </div>
        <div class="col s12 m5">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}" class="me-0">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
    </div>
    <div class="row d-flex" style="flex-direction: column;">
        <div class="center-align">
            <h5 class="text-uppercase">comments</h5>
            <hr class="short-separator"> 
        </div>
        <div class=" col s12 m8 m-auto">
            <form action="/stories/show/{{story._id}}" method="POST">
                <div>
                    <div class="input-field">
                        <h5 class="text-capitalize">what are you thinking?</h5>
                        <textarea id="body" name="body"></textarea>
                    </div>
                </div>
                <div>
                    <input type="submit" value="comment" class="btn">
                </div>
            </form>
            <div class="row mt-2">
            </div>
            {{#each comments}}
                <div class="col s12">
                    <div class="card-panel grey lighten-5 z-depth-1">
                        <div class="row valign-wrapper mb-0">
                            <div class="col s2">
                                <img src="{{user.image}}" alt="" class="circle responsive-img">
                            </div>
                            <div class="col s10">
                                <h6 class="bold">{{user.displayName}}</h6>
                                <p class="black-text">
                                    {{stripTags body}}
                                </p>
                                {{{deleteCommentIcon user ../user _id}}}
                            </div>
                        </div>
                    </div>
            </div>
            {{else}}
            {{/each}}
        </div>
    </div>
    
</div>